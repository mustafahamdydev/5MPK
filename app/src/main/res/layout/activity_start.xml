<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".activities.StartActivity"
    android:background="?attr/colorOnPrimary"
    >

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="46sp"
       android:text="@string/welcome"
       android:fontFamily="@font/poppinsmedium"
       android:layout_alignParentTop="true"
       android:layout_centerInParent="true"
       android:layout_marginTop="40dp"
       android:textColor="?attr/colorPrimary"
       />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/untitled_3"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/tv_permsion"
        android:layout_marginBottom="200dp"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/tv_permsion"
        android:layout_width="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textSize="26sp"
        android:text="@string/we_just_need_location_permission_to_start_please_accept_the_dialogue_that_will_appear_now"
        />

</RelativeLayout>
