<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Wanderer" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_100</item>
        <item name="colorPrimaryVariant">@color/blue_150</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/blue_150</item>
        <item name="android:colorAccent">@color/blue_150</item>
        <item name="colorControlActivated">@color/blue_150</item>
        <item name="colorPrimaryContainer">@color/blue_150</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Wanderer" parent="Base.Theme.Wanderer" />
</resources>