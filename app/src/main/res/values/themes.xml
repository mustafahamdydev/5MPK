<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FiveMPK" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="colorPrimary">@color/blue_100</item>
        <item name="colorPrimaryVariant">@color/blue_150</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/blue_150</item>
        <item name="android:colorAccent">@color/blue_150</item>
        <item name="colorControlActivated">@color/blue_150</item>
        <item name="colorPrimaryContainer">@color/blue_150</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppinsmedium</item>

    </style>
    <style name="Theme.FiveMPK" parent="Base.Theme.FiveMPK" />
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.FiveMPK</item>
        <!-- Add other customizations as needed -->
        <item name="windowSplashScreenAnimationDuration">200</item>
    </style>
</resources>